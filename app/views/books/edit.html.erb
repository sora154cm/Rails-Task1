<h1>Editing Book</h1>


<%= form_with model: @book, method: :patch  do |f| %>

  <h4>本のタイトル</h4>
  <%= f.text_field :title %>

  <h4>感想</h4>
  <%= f.text_area :body %>

  <% if @book.errors.any? %>
<div>
  <%= @book.errors.count %>error...
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

  <br><%= f.submit 'Update Book' %>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %>|
  <a href="/books">Back</a>